{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "review-report",
  "type": "object",
  "required": [
    "tool",
    "model",
    "timestamp",
    "pr",
    "summary",
    "assumptions",
    "findings",
    "tests",
    "exit_criteria"
  ],
  "properties": {
    "tool": {
      "type": "string",
      "enum": ["claude-code", "codex-cli", "gemini-cli"]
    },
    "model": {
      "type": "string"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "pr": {
      "type": "object",
      "required": ["repo", "number", "head_sha", "branch"],
      "properties": {
        "repo": { "type": "string" },
        "number": { "type": ["number", "integer"] },
        "head_sha": { "type": "string" },
        "branch": { "type": "string" },
        "link": { "type": "string" }
      }
    },
    "summary": {
      "type": "string",
      "minLength": 1
    },
    "assumptions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["text", "status", "evidence"],
        "properties": {
          "text": { "type": "string" },
          "status": {
            "type": "string",
            "enum": ["validated", "falsified", "unverified", "uncertain"]
          },
          "evidence": {
            "type": "array",
            "items": { "type": "string" }
          },
          "falsification_step": { "type": "string" }
        }
      }
    },
    "findings": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["category", "severity", "file", "lines", "message"],
        "properties": {
          "category": {
            "type": "string",
            "enum": ["security", "correctness", "performance", "testing", "architecture", "style", "maintainability", "docs"]
          },
          "severity": {
            "type": "string",
            "enum": ["critical", "high", "medium", "low"]
          },
          "file": { "type": "string" },
          "lines": { "type": "string" },
          "message": { "type": "string" },
          "suggestion": { "type": "string" },
          "evidence": {
            "type": "array",
            "items": { "type": "string" }
          },
          "must_fix": { "type": "boolean" }
        }
      }
    },
    "must_fix": {
      "type": "array",
      "items": { "type": "string" }
    },
    "tests": {
      "type": "object",
      "required": ["executed", "command", "exit_code", "summary"],
      "properties": {
        "executed": { "type": "boolean" },
        "command": { "type": ["string", "null"] },
        "exit_code": { "type": ["number", "null", "integer"] },
        "summary": { "type": "string" },
        "coverage": { "type": ["number", "null", "integer"] }
      }
    },
    "metrics": {
      "type": "object",
      "properties": {
        "files_changed": { "type": "number" },
        "files_added": { "type": "number" },
        "files_deleted": { "type": "number" },
        "lines_added": { "type": "number" },
        "lines_removed": { "type": "number" },
        "security_issues": { "type": "number" },
        "correctness_issues": { "type": "number" },
        "performance_issues": { "type": "number" }
      }
    },
    "evidence": {
      "type": "array",
      "items": { "type": "string" }
    },
    "exit_criteria": {
      "type": "object",
      "required": ["ready_for_pr"],
      "properties": {
        "ready_for_pr": { "type": "boolean" },
        "reasons": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "error": {
      "type": "string"
    }
  }
}
