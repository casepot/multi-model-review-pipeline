{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/review-pipeline/schemas/pipeline.schema.json",
  "title": "Review Pipeline Configuration",
  "description": "Configuration schema for the multi-model review pipeline",
  "type": "object",
  "required": ["execution", "providers"],
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference"
    },
    "version": {
      "type": "string",
      "description": "Configuration version",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "execution": {
      "type": "object",
      "description": "Pipeline execution settings",
      "required": ["parallel", "timeout_seconds"],
      "additionalProperties": false,
      "properties": {
        "parallel": {
          "type": "boolean",
          "description": "Run providers in parallel",
          "default": true
        },
        "timeout_seconds": {
          "type": "integer",
          "description": "Global timeout per provider in seconds",
          "minimum": 30,
          "default": 120
        },
        "fail_fast": {
          "type": "boolean",
          "description": "Stop on first provider failure",
          "default": false
        },
        "retry_on_failure": {
          "type": "boolean",
          "description": "Retry failed providers once",
          "default": false
        },
        "max_retries": {
          "type": "integer",
          "description": "Maximum retry attempts",
          "minimum": 0,
          "maximum": 3,
          "default": 0
        }
      }
    },
    "providers": {
      "type": "object",
      "description": "Provider-specific configurations",
      "additionalProperties": false,
      "properties": {
        "claude": {
          "$ref": "#/definitions/claudeProvider"
        },
        "codex": {
          "$ref": "#/definitions/codexProvider"
        },
        "gemini": {
          "$ref": "#/definitions/geminiProvider"
        }
      }
    },
    "review": {
      "type": "object",
      "description": "Review scope and filtering",
      "additionalProperties": false,
      "properties": {
        "include_patterns": {
          "type": "array",
          "description": "File patterns to include in review",
          "items": {
            "type": "string"
          },
          "default": ["**/*"]
        },
        "exclude_patterns": {
          "type": "array",
          "description": "File patterns to exclude from review",
          "items": {
            "type": "string"
          },
          "default": ["**/node_modules/**", "**/vendor/**", "**/.git/**"]
        },
        "max_diff_size_kb": {
          "type": "integer",
          "description": "Maximum diff size in KB",
          "minimum": 1,
          "maximum": 10000,
          "default": 500
        },
        "max_files": {
          "type": "integer",
          "description": "Maximum number of files to review",
          "minimum": 1,
          "maximum": 1000,
          "default": 100
        }
      }
    },
    "output": {
      "type": "object",
      "description": "Output formatting options",
      "additionalProperties": false,
      "properties": {
        "format": {
          "type": "string",
          "description": "Output format",
          "enum": ["markdown", "json", "html"],
          "default": "markdown"
        },
        "include_raw_reports": {
          "type": "boolean",
          "description": "Include raw provider reports in output",
          "default": false
        },
        "summary_max_length": {
          "type": "integer",
          "description": "Maximum summary length in characters",
          "minimum": 100,
          "maximum": 2000,
          "default": 500
        },
        "verbose": {
          "type": "boolean",
          "description": "Verbose output mode",
          "default": false
        }
      }
    },
    "gating": {
      "type": "object",
      "description": "Gate pass/fail criteria",
      "additionalProperties": false,
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable gate checks",
          "default": true
        },
        "must_fix_threshold": {
          "type": "integer",
          "description": "Number of must-fix issues to fail gate",
          "minimum": 0,
          "default": 1
        },
        "block_on_test_failure": {
          "type": "boolean",
          "description": "Fail gate if tests fail",
          "default": true
        },
        "require_unanimous_pass": {
          "type": "boolean",
          "description": "All providers must pass for gate to pass",
          "default": false
        },
        "severity_thresholds": {
          "type": "object",
          "description": "Issue count thresholds by severity",
          "additionalProperties": false,
          "properties": {
            "critical": {
              "type": "integer",
              "minimum": 0,
              "default": 0
            },
            "high": {
              "type": "integer",
              "minimum": 0,
              "default": 0
            },
            "medium": {
              "type": "integer",
              "minimum": 0,
              "default": 5
            },
            "low": {
              "type": "integer",
              "minimum": 0,
              "default": 10
            }
          }
        }
      }
    },
    "testing": {
      "type": "object",
      "description": "Test execution configuration",
      "additionalProperties": false,
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Run tests during review",
          "default": true
        },
        "command": {
          "type": "string",
          "description": "Test command to execute",
          "default": "pytest tests/"
        },
        "timeout_seconds": {
          "type": "integer",
          "description": "Test execution timeout",
          "minimum": 10,
          "default": 300
        },
        "required_pass_rate": {
          "type": "number",
          "description": "Required test pass rate (0.0-1.0)",
          "minimum": 0.0,
          "maximum": 1.0,
          "default": 0.95
        }
      }
    }
  },
  "definitions": {
    "claudeProvider": {
      "type": "object",
      "description": "Claude provider configuration",
      "additionalProperties": false,
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable this provider",
          "default": true
        },
        "model": {
          "type": "string",
          "description": "Model to use",
          "enum": ["opus", "sonnet", "haiku"],
          "default": "sonnet"
        },
        "timeout_override": {
          "type": ["integer", "null"],
          "description": "Provider-specific timeout override",
          "minimum": 30,
          "default": null
        },
        "flags": {
          "type": "object",
          "description": "CLI flags configuration",
          "additionalProperties": false,
          "properties": {
            "permission_mode": {
              "type": "string",
              "enum": ["default", "plan", "read", "write", "exec"],
              "default": "default"
            },
            "output_format": {
              "type": "string",
              "enum": ["json", "text"],
              "default": "json"
            },
            "continue_session": {
              "type": "boolean",
              "default": false
            }
          }
        },
        "additional_flags": {
          "type": "array",
          "description": "Additional CLI flags",
          "items": {
            "type": "string"
          },
          "default": []
        }
      }
    },
    "codexProvider": {
      "type": "object",
      "description": "Codex provider configuration",
      "additionalProperties": false,
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable this provider",
          "default": true
        },
        "model": {
          "type": "string",
          "description": "Model to use",
          "default": "gpt-5"
        },
        "timeout_override": {
          "type": ["integer", "null"],
          "description": "Provider-specific timeout override",
          "minimum": 30,
          "default": null
        },
        "reasoning_effort": {
          "type": "string",
          "description": "Reasoning effort level",
          "enum": ["minimal", "low", "medium", "high"],
          "default": "low"
        },
        "sandbox_mode": {
          "type": "string",
          "description": "Sandbox execution mode",
          "enum": ["read-only", "workspace-write", "danger-full-access"],
          "default": "read-only"
        },
        "working_directory": {
          "type": "string",
          "description": "Working directory for execution",
          "default": "."
        },
        "additional_config": {
          "type": "object",
          "description": "Additional -c config options",
          "additionalProperties": {
            "type": "string"
          },
          "default": {}
        }
      }
    },
    "geminiProvider": {
      "type": "object",
      "description": "Gemini provider configuration",
      "additionalProperties": false,
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable this provider",
          "default": true
        },
        "model": {
          "type": "string",
          "description": "Model to use",
          "enum": [
            "gemini-2.5-pro",
            "gemini-2.5-flash",
            "gemini-2.0-flash",
            "gemini-1.5-pro",
            "gemini-1.5-flash"
          ],
          "default": "gemini-2.5-pro"
        },
        "timeout_override": {
          "type": ["integer", "null"],
          "description": "Provider-specific timeout override",
          "minimum": 30,
          "default": null
        },
        "flags": {
          "type": "object",
          "description": "CLI flags configuration",
          "additionalProperties": false,
          "properties": {
            "sandbox": {
              "type": "boolean",
              "description": "Run in sandbox mode",
              "default": false
            },
            "yolo": {
              "type": "boolean",
              "description": "Auto-accept all actions",
              "default": false
            },
            "all_files": {
              "type": "boolean",
              "description": "Include all files in context",
              "default": false
            }
          }
        },
        "additional_flags": {
          "type": "array",
          "description": "Additional CLI flags",
          "items": {
            "type": "string"
          },
          "default": []
        }
      }
    }
  }
}