{
  "$schema": "../config/schemas/project.schema.json",
  "version": "1.0.0",
  
  "providers": {
    "claude": {
      "enabled": true,
      "model": "opus",
      "timeout_override": 180
    },
    "codex": {
      "enabled": true,
      "model": "gpt-5",
      "reasoning_effort": "high"
    },
    "gemini": {
      "enabled": false,
      "model": "gemini-2.5-pro"
    }
  },
  
  "testing": {
    "enabled": true,
    "command": "npm test",
    "timeout_seconds": 300,
    "required_pass_rate": 0.95
  },
  
  "review": {
    "include_patterns": ["src/**/*", "lib/**/*"],
    "exclude_patterns": [
      "**/node_modules/**",
      "**/dist/**",
      "**/*.test.js",
      "**/*.spec.js"
    ],
    "max_diff_size_kb": 500,
    "max_files": 100
  },
  
  "gating": {
    "enabled": true,
    "must_fix_threshold": 1,
    "block_on_test_failure": true,
    "require_unanimous_pass": false,
    "severity_thresholds": {
      "critical": 0,
      "high": 1,
      "medium": 5,
      "low": 10
    }
  },
  
  "output": {
    "format": "markdown",
    "include_raw_reports": false,
    "summary_max_length": 500,
    "verbose": false
  }
}